            <Button.Background>
                <ImageBrush ImageSource="src/300only.jpg"/>
            </Button.Background>
            <Label x:Name="label" Content="LKR 300 ONLY" Height="54" Width="184" Background="Red" FontSize="25" Foreground="White" FontWeight="Bold"/>
        </Button>
        <Button x:Name="button_Copy" HorizontalAlignment="Left" Height="228" Margin="683,103,0,0" VerticalAlignment="Top" Width="284" Grid.ColumnSpan="2" Click="Button_Copy_Click">
            <Button.Background>
                <ImageBrush ImageSource="src/800 only.jpg"/>
            </Button.Background>
            <Label x:Name="label2" Content="LKR 800 ONLY" Height="43" Width="175" Background="White" FontSize="25" Foreground="Red" FontWeight="Bold"/>

        </Button>
        <Button x:Name="button_Copy1" HorizontalAlignment="Left" Height="206" Margin="535,364,0,0" VerticalAlignment="Top" Width="339" Foreground="Red" FontWeight="Bold" Click="Button_Copy1_Click">
            <Button.Background>
                <ImageBrush ImageSource="src/500only.jpg"/>
            </Button.Background>
            <Label x:Name="label4" Content="LKR 500 ONLY" Height="42" Width="186" FontSize="25" Background="Red" Foreground="White"/>
        </Button>
        <Button x:Name="button_Copy2" HorizontalAlignment="Left" Height="206" Margin="150,364,0,0" VerticalAlignment="Top" Width="339" Click="Button_Copy2_Click">
            <Button.Background>
                <ImageBrush ImageSource="src/3000only.jpg"/>
            </Button.Background>
            <Label x:Name="label3" Content="LKR 2300 ONLY" Height="44" Width="194" Background="Red" Foreground="White" FontSize="25" FontWeight="Bold"/>
        </Button>
        <Button x:Name="button_Copy3" HorizontalAlignment="Left" Height="228" Margin="343,103,0,0" VerticalAlignment="Top" Width="302" FontSize="30" Foreground="White" Click="Button_Copy3_Click">
            <Button.Background>
                <ImageBrush ImageSource="src/Double-King-1-300x300.jpg"/>
            </Button.Background>
            <Label x:Name="label1" Content="LKR 500 ONLY" Height="49" Width="180" Background="White" Foreground="Red" FontWeight="Bold" FontSize="25"/>
        </Button>

    </Grid>
</Window>
