        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Height="70" Margin="299,10,0,0" TextWrapping="Wrap" Text="FAMILY MEET UP" VerticalAlignment="Top" Width="348" FontSize="40"/>
