                <ImageBrush ImageSource="src/FamilyMeetUp.jpg"/>
            </DockPanel.Background>
        </DockPanel>
        <TextBlock x:Name="textBlock1" HorizontalAlignment="Left" Height="87" Margin="26,422,0,0" TextWrapping="Wrap" Text="Family Package is specially for your loving Family members.With this Package we serve you 1 Large Pizza,1L Cocacola,4 Chocolate Puddings and 1 Garlic Bread" VerticalAlignment="Top" Width="945" Background="White" FontSize="20"/>
